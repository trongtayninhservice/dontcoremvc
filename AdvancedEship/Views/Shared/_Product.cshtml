@model ConnectDb2.Models.Product

@{
    var myProduct = Model; 
}
<div class="col-lg-3 col-md-6 col-sm-12 pb-1">
    <div class="card product-item border-0 mb-4">
        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
            <img class="img-fluid w-100" src="@myProduct.ProductPhoto" alt="">
        </div>
        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
            <h6 class="text-truncate mb-3">@myProduct.ProductName    </h6>
            <div class="d-flex justify-content-center">
                <h6>$@(Model.ProductPrice * (1 - Model.ProductDiscount))</h6><h6 class="text-muted ml-2"><del>$@myProduct.ProductPrice</del></h6>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between bg-light border">
            <a href="/Products/Details/@myProduct.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
           

            <button class="  add-to-cart fas fa-shopping-cart text-primary mr-1" data-product-id="@myProduct.ProductId">Add to Cart 111</button>
        
        </div>
    </div>
</div>

